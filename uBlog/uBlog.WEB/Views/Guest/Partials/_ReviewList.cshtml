@model IEnumerable<uBlog.WEB.Models.ReviewViewModel>

@using uBlog.WEB.Helpers

@if (Model.Count() == 0)
{
    <p class="flow-text centralized welcome-text">Be the first one who leave a review!</p>
}
else
{
    foreach (var item in Model.Reverse())
    {
        <div class="row">
            <div class="col s10 push-s1">
                <div class="card">
                    <div class="card-content">
                        <div class="col s6">
                            Author: @Html.DisplayFor(modelItem => item.AuthorName)
                        </div>
                        <div class="col s5 right-align">
                            @Html.DisplayFor(modelItem => item.PublishDate)
                        </div>
                        <div class="col s1 centralized">
                            <a data-ajax="true" data-ajax-confirm="Are you sure you want to delete this review?"
                               data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#review_target" href="/Guest/Delete/@item.ReviewId">
                                <i class="material-icons">clear</i>
                            </a>
                        </div> 
                        <hr />
                        <div class="col s12">
                            @Html.WriteHtml(item.Text.Replace("\r\n", "<br>"))
                        </div>
                        <div class="row"></div>
                    </div>
                </div>
            </div>
        </div>
    }
}

