@model IEnumerable<uBlog.WEB.Models.ArticleViewModel>

@{
    ViewBag.Title = "Main";
}
<div class="row no-margin-bot">
    <div class="col s7 push-s1">
        <div id="main-body" class="card">
            <div class="row"></div>
            <p class="flow-text welcome-text centralized">Feed</p>
            <p class="flow-text sub-welcome-text centralized">Hope you'll find something interesting here</p>
            <hr class="colored-hr no-margin-vert" />
            <ul class="collapsible z-depth-0 no-margin-vert" data-collapsible="accordion">
                <li>
                    <div class="collapsible-header centralized write-article-header">                       
                        <span class="flow-text write-article-text">Write an article</span>
                        <i class="material-icons right">reorder</i>
                    </div>
                    <div class="collapsible-body">
                        @Html.Partial("Partials/_ArticleForm", Model.LastOrDefault())
                    </div>
                </li>
            </ul>
            <hr class="colored-hr no-margin-vert" />
            <div id="article_target" class="row">
                @Html.Partial("Partials/_ArticleList", Model)
            </div>
        </div>
    </div>
    <div class="col s3 push-s1">
        <div class="row">
            <div id="right-sidebar" class="card centralized">
                <div class="row"></div>
                <p class="card-title flow-text">Menu</p>
                <div class="collection with-header">
                    @Html.RouteLink("Main", new {controller = "Home", action = "Index"}, new {@class = "collection-item active"})
                    @Html.RouteLink("Guest", new {controller = "Guest", action = "Index"}, new {@class = "collection-item"})
                    @Html.RouteLink("Quize", new {controller = "Quize", action = "Index"}, new {@class = "collection-item"})
                </div>
            </div>
        </div>
        <div class="row">
            <div id="poll-section" class="card">
                @Html.Action("Index", "Poll", new {id = 1})
            </div>
        </div>
    </div>
</div>