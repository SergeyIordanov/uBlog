@model IEnumerable<EPAM_MVC_2.Models.Review>

@using EPAM_MVC_2.Helpers

@foreach (var item in Model.Reverse())
{
    <div class="row">
        <div class="col s10 push-s1">
            <div class="card">
                <div class="card-content">
                    <div class="col s8">
                        Author: @Html.DisplayFor(modelItem => item.AuthorName)
                    </div>
                    <div class="col s4">
                        @Html.DisplayFor(modelItem => item.PublishDate)
                    </div>
                    <hr />
                    <div class="col s12">
                        @Html.WriteHtml(item.Text.Replace("\r\n", "<br>"))
                    </div>
                    <div class="row"></div>
                </div>
            </div>
        </div>
    </div>
}