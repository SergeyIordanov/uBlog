@model IEnumerable<EPAM_MVC_2.Models.Article>

@using EPAM_MVC_2.Helpers

@foreach (var item in Model.Reverse())
{
    <div class="row">
        <div class="col s10 push-s1">
            <div class="card">
                <div class="card-content">
                    <div class="row valign-wrapper">
                        <div class="col s2">
                            <img src="~/Content/Images/article.png" height="100" width="100" alt="" class="circle responsive-img">
                        </div>
                        <div class="col s10 centralized">
                            <p class="flow-text">@Html.DisplayFor(modelItem => item.Title)</p>
                        </div>
                    </div>                
                    <hr />
                    <div class="row">
                        <div class="col s12">
                            @Html.WriteHtml(item.Text.Replace("\r\n", "<br>"))
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s4 push-s8">
                            @Html.DisplayFor(modelItem => item.PublishDate)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}